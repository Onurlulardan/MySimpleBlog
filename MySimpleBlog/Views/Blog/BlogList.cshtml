@model IEnumerable<EntityLayer.Concrete.Blog>
<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12">
                <h2>Recent Posts</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 mb-4">
                @foreach (var item in Model)
                {
                    <div class="entry2">
                        <a href="single.html"><img src="@item.BlogImage" alt="Image" class="img-fluid rounded"></a>
                        <div class="excerpt">
                            <span class="post-category text-white bg-secondary mb-3">@item.Category.CategoryName</span>

                            <h2><a href="single.html">@item.BlogTitle</a></h2>
                            <div class="post-meta align-items-center text-left clearfix">
                                <figure class="author-figure mb-0 mr-3 float-left"><img src="~/miniblog/images/person_1.jpg" alt="Image" class="img-fluid"></figure>
                                <span class="d-inline-block mt-1">By <a href="#">@item.Author.AuthorName</a></span>
                                <span>&nbsp;-&nbsp; @item.BlogDate</span>
                            </div>

                            <p>@item.BlogContent</p>
                            <p><a href="#">Read More</a></p>
                        </div>
                    </div>
                }

            </div>


        </div>
        <div class="row text-center pt-5 border-top">
            <div class="col-md-12">
                <div class="custom-pagination">
                    <span>1</span>
                    <a href="#">2</a>
                    <a href="#">3</a>
                    <a href="#">4</a>
                    <span>...</span>
                    <a href="#">15</a>
                </div>
            </div>
        </div>
    </div>
</div>